#!/bin/bash
# find base dir so we can call helpers
base_dir="$( cd -- "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 ; pwd -P )"

#include all the common functions
source "${base_dir}/helpers.sh"

orig_branch="$(cur_branch)"
main_branch="$(main_branch)"

git diff-index --quiet HEAD || error "⛔️ You have uncommitted changes. Commit or stash your changes before syncing"

git checkout -q "$main_branch" || error "⛔️ cannot check out ${main_branch}. Is your \$main_branch set correctly?"
old_head="$(git rev-parse HEAD)"

echo -e "${GREEN}▶︎${PLAIN} Fetching remote updates..."
git fetch --prune || error "⛔️ Could not fetch origin"


if [[ $(git rev-parse origin/HEAD) == $old_head ]]; then
  echo -e "${YELLOW}▶︎${PLAIN} No updates to remote ${main_branch}"
else
  echo -e "${GREEN}▶︎${PLAIN} rebasing the following new commits onto ${main_branch}:"
  git log --oneline "${old_head}..origin/HEAD"
  git rebase "origin/${main_branch}" || error "⛔️ Could not rebase $main_branch"
fi

echo -e "${GREEN}▶︎${PLAIN} rebasing ${orig_branch}..."
git checkout -q "${orig_branch}" || error "⛔️ Could not check out $orig_branch"
git log --oneline "HEAD..origin/HEAD"
git rebase "origin/${main_branch}" || error "⛔️ Could not rebase $orig_branch"
